<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:dividerHeight="0px"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="false">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/Ripple">

        <RelativeLayout
            android:id="@+id/clickLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingTop="0dp">

            <RelativeLayout
                android:id="@+id/circleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@drawable/oval">

                <TextView
                    android:id="@+id/hymnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:text="MHB\n1"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:fontFamily="@font/hbbb"
                android:id="@+id/title"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="O FOR a thousand tongues to sing."
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_toRightOf="@+id/circleView"
                android:layout_alignTop="@+id/circleView"
                android:textAllCaps="true"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/stansaz"
                android:textColor="@color/stanzas_text"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stanzas - 6"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:id="@+id/content"
                android:padding="2dp"
                android:fontFamily="@font/hb"
                android:text="Mi-nã lilɛii akpe kɛ la Mi kpɔlɔ yijiemɔ; Mi- Nyɔŋmɔ kɛ Maŋtsɛ numnyãm, Edromɔ kunim lɛ."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_below="@+id/stansaz"
                android:layout_alignLeft="@+id/stansaz"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/author"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHARLES WESLEY  1707 - 88"
                android:layout_below="@+id/content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</androidx.cardview.widget.CardView>
